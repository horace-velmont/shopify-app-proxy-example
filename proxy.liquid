{% layout none %}
<script id="channel-io-widget">
window.channelConfig = {};
window.channelConfig.customer = {};
window.channelConfig.customer.email = '{{customer.email}}';
window.channelConfig.customer.name = '{{customer.name}}';
window.channelConfig.customer.phone = '{{customer.phone}}';
window.channelConfig.customer.id = '{{customer.id}}';
window.channelConfig.address = {};
{% for address in customer.addresses %}
  window.channelConfig.address.street = '{{ address.street }}';
{% endfor %}

window.channelConfig.customer.orders_count = '{{customer.orders_count}}';
window.channelConfig.customer.total_spent = '{{customer.total_spent}}';
window.channelConfig.address = {};
window.channelConfig.address.address1 = '{{address.address1}}';
window.channelConfig.address.address2 = '{{address.address2}}';
window.channelConfig.address.shipping_address = '{{address.shipping_address}}';
window.channelConfig.address.billing_address = '{{address.billing_address}}';
window.channelConfig.address.name = '{{address.name}}';
window.channelConfig.customer_address = {};
window.channelConfig.customer_address.address1 = '{{customer_address.address1}}';
window.channelConfig.customer_address.address2 = '{{customer_address.address2}}';
window.channelConfig.customer_address.street = '{{customer_address.street}}';
window.channelConfig.customer_address.country = '{{customer_address.country}}';
</script>
